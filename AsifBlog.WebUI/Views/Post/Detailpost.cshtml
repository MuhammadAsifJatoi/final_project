@model AsifBlog.Model.Post
@{
    ViewData["Title"] = "Detailpost";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-dark table-bordered table-hover table-striped text-center">
                <tr>
                    <th colspan="9"> <h3 class="text-center">Post</h3></th>
                </tr>
                <tr>
                    <th colspan="9">  <a class="btn btn-success" asp-controller="Post" asp-action="Createpost">Add New</a></th>
                </tr>
                <tr>
                    <th>Title</th>
                    <th>Short Discription</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Posted On</th>
                    <th>Category</th>
                    <th>Author Name</th>
                    <th>Post Status</th>
                    <th>Action</th>
                </tr>

                <tr>
                    <td>@Model.Title</td>
                    <td>@Model.shortDescription</td>
                    <td>@Model.description</td>
                    <td>@Model.img</td>
                    <td>@Model.postedon</td>
                    <td>@Model.Category.Name</td>
                    <td>@Model.User.Name</td>
                    <td>@Model.PostStatus.Name</td>
                    <td>

                        <a class="btn btn-success" asp-controller="Post" asp-action="Updatepost" asp-route-Id="@Model.Id">Edit</a>
                    </td>
                </tr>

                }
            </table>
        </div>

    </div>
</div>

