@model AsifBlog.Model.User
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">Register</h1>
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4"style="border:3px solid green;padding:20px">
            <form asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <br />
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                <br />
                <label asp-for="EmailAdress">Email</label>
                <input asp-for="EmailAdress" class="form-control" placeholder="Enter Email" />
                <span asp-validation-for="EmailAdress" class="text-danger"></span>
                <br />
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <br />
                @if (string.IsNullOrEmpty(ViewBag.Error))
                {
                    <span class="text-danger">@ViewBag.Error</span>
                }
                <button type="submit" value="Register" class="btn btn-success">Register</button>
                @*<input type="submit"value="LOGIN" class="btn btn-success"/>*@
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

