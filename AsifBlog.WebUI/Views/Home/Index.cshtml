@model List<AsifBlog.Model.Post>
@{
    ViewData["Title"] = "Home Page";
}

<div id="Hero" class="col-12 min-vh-100 text-center align-items-center d-flex">

    <div class="container">
        <div class="col-12">
            <div>
                <h6 class=" herotext text-light">
                    Wellcome To <span class="text-success">Journey Journals</span>
                </h6>
                <br />
                <p class="text-light py-3">Join us on a journey of discovery as we traverse the globe to uncover the world's most<br /> extraordinary destinations Discover Pakistan's breathtaking beauty and rich cultural<br /> tapestry. Join us on a journey to explore the land of wonders </p>
            </div>
            <br />
            <div>
                <a class="btn btn-success" asp-controller="Account" asp-action="Register">Join Now</a>
               
            </div>
        </div>
    </div>
</div>

<br />
<div class="container">
    <div class="row">

        @{
            foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="card mb-5">
                        <div class="card-body">
                            <img class="card-img-top" src="@item.img" alt="Title" />
                            <h4 class="card-title">@item.Title</h4>
                            <p class="card-text">@item.shortDescription</p>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>